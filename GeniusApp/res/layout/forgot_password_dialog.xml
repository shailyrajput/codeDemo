<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:id="@+id/rLayout_main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/red_bg_drawable"
        android:clickable="true" >

        <RelativeLayout
            android:id="@+id/rlayout_forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/forgot_password_bg" >

            <EditText
                android:id="@+id/editTxt_forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:gravity="center"
                android:hint="Enter your email"
                android:inputType="text"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgView_Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlayout_forgotpassword"
            android:layout_centerHorizontal="true"
            android:src="@drawable/verify_email_button" />
    </RelativeLayout>
</RelativeLayout>
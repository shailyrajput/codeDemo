<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rLayout_main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/red_bg_drawable"
        android:clickable="true" >

        <TextView
            android:id="@+id/textView_displayMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/logout_msg"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/rLayout_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView_displayMsg"
            android:background="@color/white"
            android:clickable="true" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rLayout_Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayout_line"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2" >

            <Button
                android:id="@+id/btn_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="No" />

            <Button
                android:id="@+id/btn_Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Yes" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>